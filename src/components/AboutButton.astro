---
import { Icon } from "@astrojs/starlight/components";
---

<div class="header-actions">
    <a href="/about" class="shadcn-primary">
        <span>About Me</span>
    </a>
</div>

<style>
    .header-actions {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .shadcn-primary {
        /* 1. Layout & Size */
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        height: 2rem; /* shadcn 'sm' equivalent for headers */
        padding: 0 0.75rem;
        text-decoration: none;
        white-space: nowrap;

        /* 2. Shadcn Primary Colors */
        /* USES YOUR ACCENT COLOR FOR THE SOLID LOOK */
        background-color: var(--sl-color-white);
        color: var(--sl-color-black);

        /* 3. Shape & Font */
        border-radius: 0.375rem; /* shadcn rounded-md */
        font-family: var(--sl-font-system);
        font-size: 0.875rem;
        font-weight: 500;

        /* 4. Transitions */
        transition:
            opacity 0.2s ease,
            transform 0.1s ease;
    }

    /* 5. Shadcn Hover Style (Subtle Opacity) */
    .shadcn-primary:hover {
        opacity: 0.9;
        color: var(--sl-color-black);
    }

    /* 6. Shadcn Active State (Click) */
    .shadcn-primary:active {
        transform: scale(0.96);
    }

    .shadcn-primary :global(svg) {
        width: 1rem;
        height: 1rem;
    }

    /* Mobile responsiveness */
    @media (max-width: 50rem) {
        .shadcn-primary span {
            display: none; /* Icon only to save space */
        }
        .shadcn-primary {
            padding: 0 0.5rem;
        }
    }
</style>
